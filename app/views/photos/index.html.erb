<h1>Zdjęcia 
	<%=
	link_to "Dodaj zdjęcie", new_photo_path, class: 'btn btn-primary pull-right'
	%>
	<% content_for :title, 'Zdjęcia' %>
</h1>
<table class="table">
	<thead>
		<tr>
			<th>Tytuł</th>
			<th>Opis</th>
			<th>Plik</th>
			<th colspan: "2"></th>
		</tr>
	</thead>
	<tbody>
		<% @photos.each do |photo| %>
			<tr>
				<td><%= link_to photo.title, photo_path(photo) %></td>
				<td><%= photo.description %></td>
				<td>
					<%= image_tag photo.image_url, height: 50 %>
				</td>
				<td><%= link_to 'Edytuj', edit_photo_path(photo) %> </td>
				<td>
					<%= link_to 'Usuń zdjęcie', photo_path(photo), method: :delete, 
					data: {confirm: 'Na pewno chcesz usunąć zdjęcie ?'} %>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>

