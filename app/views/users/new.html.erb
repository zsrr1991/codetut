<% content_for :title, 'Rejestracja' %>
<h1>Rejestracja</h1>
<div class="row">
	<div class="col-md-6">
		<%= form_for(@user, url: signup_path) do |f| %>
			<div class="form-group">
				<%= f.label :email, 'Adres email' %>
				<%= f.text_field :email, class: 'form-control', placeholder: 'Wpisz email'%>
				<%= error_message_for(f.object, :email) %>
			</div>

			<div class="form-group">
				<%= f.label :first_name, 'Imię' %>
				<%= f.text_field :first_name, class: 'form-control', placeholder: 'Wpisz imię' %>
				<%= error_message_for(f.object, :first_name) %>
			</div>

			<div class="form-group">
				<%= f.label :last_name, 'Nazwisko' %>
				<%=	f.text_field :last_name, class: 'form-control',	placeholder: 'Wpisz nazwisko' %>
				<%= error_message_for(f.object, :last_name) %>
			</div>

			<div class="form-group">
				<%= f.label :password, 'Hasło' %>
				<%=	f.password_field :password, class: 'form-control', placeholder: 'Wpisz hasło'%>
				<%= error_message_for(f.object, :password) %>
			</div>

			<div class="form-group">
				<%= f.label :password_confirmation, 'Potwierdzenie hasła' %>
				<%=	f.password_field :password_confirmation, class: 'form-control',	placeholder: 'Wpisz ponownie hasło'	%>
				<%= error_message_for(f.object, :password_confirmation) %>
			</div>
			
			<div class="form-group">
				<%= recaptcha_tags %>
			</div>


			<div class="actions">
				<%= f.submit 'Zarejestruj się', class: 'btn btn-primary' %>
			</div>

		<% end %>
	</div>
</div>

